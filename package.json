    "rxjs": "^7.8.1",
    "ts-morph": "^19.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.2.4",
    "@nestjs/cli": "^10.1.10",
