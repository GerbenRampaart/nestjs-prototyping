    "jest": "29.6.2",
    "npm-check-updates": "16.10.17",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "prisma-docs-generator": "^0.8.0",
    "prisma-erd-generator": "^1.8.0",
    "prisma-json-schema-generator": "^4.0.0",
